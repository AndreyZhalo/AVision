<Window x:Class="AVision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Контроль пайки печатных плат" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FFEEEEEE">
            <Button x:Name="LoadReferenceBtn" Content="Загрузить эталон" Click="LoadReferenceBtn_Click" Style="{StaticResource ButtonStyle}"/>
            <Button x:Name="LoadTestBtn" Content="Загрузить тестовое" Click="LoadTestBtn_Click" Style="{StaticResource ButtonStyle}"/>
            <Button x:Name="CompareBtn" Content="Сравнить изображения" Click="CompareBtn_Click" Style="{StaticResource ButtonStyle}" Background="#FFCCFFCC"/>
            <Button x:Name="ClearBtn" Content="Очистить" Click="ClearBtn_Click" Style="{StaticResource ButtonStyle}" Background="#FFFFCCCC"/>

            <Separator Width="20" Background="Transparent"/>

            <TextBlock Text="Порог чувствительности:" VerticalAlignment="Center" Margin="5,0"/>
            <Slider x:Name="ThresholdSlider" Minimum="1" Maximum="255" Value="50" Width="150" VerticalAlignment="Center"/>
            <TextBlock x:Name="ThresholdValue" Text="50" VerticalAlignment="Center" Margin="5,0" Width="30"/>
        </StackPanel>

        <!-- Основная область с изображениями -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - эталонное изображение -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Эталонное изображение" Style="{StaticResource HeaderTextStyle}"/>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Image x:Name="ReferenceImage" Stretch="None"/>
                    </ScrollViewer>

                    <TextBlock x:Name="ReferenceInfo" Grid.Row="2" Text="Изображение не загружено" 
                               HorizontalAlignment="Center" FontStyle="Italic" Foreground="Gray" Margin="5"/>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="DarkGray"/>

            <!-- Правая панель - тестовое изображение с результатами -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Тестовое изображение" Style="{StaticResource HeaderTextStyle}"/>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <!-- Исходное тестовое изображение -->
                            <Image x:Name="TestImage" Stretch="None"/>
                            <!-- Наложение с различиями (полупрозрачное) -->
                            <Image x:Name="DifferenceOverlay" Stretch="None" Opacity="0.7"/>
                        </Grid>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="TestInfo" Text="Изображение не загружено" 
                                  FontStyle="Italic" Foreground="Gray" Margin="5"/>
                        <TextBlock x:Name="ResultInfo" Text="" FontWeight="Bold" Margin="10,5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#FFDDDDDD">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="ProgressBar" Width="100" Height="16" IsIndeterminate="False" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>